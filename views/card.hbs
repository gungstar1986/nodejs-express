<h1>Корзина</h1>

<div id="card" >
{{#if courses.length}}
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Count</th>
            <th>Action</th>
        </tr>
        </thead>
        {{#each courses}}
            <tbody>
            <tr>
                <td>{{title}}</td>
                <td>{{price}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
                </td>
            </tr>
            </tbody>
        {{/each}}
    </table>


    <p>Total price: <span class="price">{{coast}}</span></p>
{{else}}
    <h1>В корзине ничего нет</h1>
{{/if}}
</div>
