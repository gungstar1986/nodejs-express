<h1>Login page</h1>

<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
            <li class="tab col s6"><a href="#register">Регистрация</a></li>
        </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        {{!-- Вывод сообщения об ошибке --}}
        {{#if logError}}
        <h4 class="alert">{{logError}}</h4>
        {{/if}}
        {{!-- Вывод сообщения об ошибке --}}

        <form action="/login" method="post">
            <div class="row">
                <div class="input-field ">
                    <input id="email" name="email" type="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Enter mail"></span>
                </div>
                <div class="input-field ">
                    <input id="password" name="password" type="password" class="validate" required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>
            </div>
            {{!-- surf запрос --}}
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn btn-primary blue">Login</button>
        </form>
    </div>
    <div id="register" class="col s6 offset-s3">
        {{!-- Вывод сообщения об ошибке --}}
        {{#if regError}}
        <h3 class="alert">{{regError}}</h3>
        {{/if}}
        {{!-- Вывод сообщения об ошибке --}}

        <form action="/register" method="post">
            <div class="row">
                <div class="input-field ">
                    <input id="name" name="name" type="text" class="validate" required>
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Enter name"></span>
                </div>
                <div class="input-field ">
                    <input id="remail" name="email" type="email" class="validate" required>
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Enter mail"></span>
                </div>
                <div class="input-field ">
                    <input id="rpassword" name="password" type="password" class="validate" required>
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>
                <div class="input-field ">
                    <input id="confirm" name="confirm" type="password" class="validate" required>
                    <label for="confirm">Re-enter password</label>
                    <span class="helper-text" data-error="Re-enter password"></span>
                </div>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn btn-primary blue">Register</button>
        </form>
    </div>
</div>