<h1>Courses</h1>
{{#if courses.length}}
{{#each courses}}
<div class="row">
    <div class="col s6 offset-s3">
        <div class="card">
            <div class="card-image">
                <img src="{{url}}" alt="{{title}}">
            </div>
            <div class="card-content">
                <span class="card-title">{{title}}</span>
                <p class="price">{{price}}</p>
            </div>
            <div class="card-action flex">
                <a href="/courses/{{_id}}/">Open course</a>

                {{!-- Выход в корень переданных данных @root.someVariable --}}
                {{#if @root.isAuth}}

                {{!-- Compare with hbs-helpers --}}
                {{#ifeq userId._id @root.userId}}
                <a href="/courses/{{_id}}/edit?allow=true">Edit</a>
                {{/ifeq }}
                {{!-- Compare with hbs-helpers --}}

                <form action="/card/add" method="POST">
                    <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-primary">Buy</button>
                </form>
                {{/if}}

            </div>
        </div>
    </div>
</div>
{{/each}}
{{else}}
<h1>Тут пока ничего нет</h1>
{{/if}}